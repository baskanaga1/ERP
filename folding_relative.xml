<?xml version="1.0" encoding="utf-8"?>
<!--<test.jinesh.customnavigation.Custom_Folding.FoldingCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
