<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_margin="15dp" android:padding="0dp"
        android:background="@drawable/round_rectangle">
        <!-- Contents will go here..-->

        <RelativeLayout
            android:background="@drawable/round_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:id="@+id/headerimage_layout"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:layout_gravity="center"
                            android:id="@+id/head_image"
                            android:layout_width="250dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="80dp"
                        android:layout_width="250dp"
                        android:layout_height="match_parent">




                        <TextView
                            android:id="@+id/heading"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:gravity="center_vertical"
                            android:text="Biggest Handover in Tamilnadu"
                            android:textColor="@color/mainTextColor"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_below="@id/heading"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/foldable_subhead_layout"
                                android:background="@drawable/oval_type_rectangle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="5dp"
                                    android:id="@+id/foldable_subhead"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="Events"/>

                            </LinearLayout>

                        </LinearLayout>





                    </RelativeLayout>

                </LinearLayout>










            </LinearLayout>

            <!-- content body layout -->


            <LinearLayout

                android:layout_below="@id/headerimage_layout"
                android:layout_marginTop="0.1dp"
                android:id="@+id/vote_count_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:visibility="visible"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/fold_vote_layout"
                        android:background="@drawable/top_greyborder"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">



                        <LinearLayout

                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:weightSum="1"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/vote"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1.6"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="3dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                >

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        android:id="@+id/foldable_votecount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="68"/>

                                    <TextView
                                        android:textSize="14sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Voted"/>

                                </LinearLayout>


                            </LinearLayout>





                        </LinearLayout>








                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:background="@drawable/middle_greyborder"
                android:layout_below="@id/vote_count_layout"
                android:layout_marginTop="0dp"
                android:id="@+id/vote_newsdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:visibility="visible"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout


                        android:weightSum="2"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">



                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:padding="0dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/date"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1.5"

                                android:layout_gravity="center_vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                >

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView

                                        android:textColor="@color/mainTextColor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="21st October , 2017"
                                        android:id="@+id/textView" />

                                </LinearLayout>


                            </LinearLayout>





                        </LinearLayout>








                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_below="@+id/vote_newsdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:background="@drawable/middle_greyborder"
                        android:visibility="visible"
                        android:id="@+id/datetime_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">





                                <LinearLayout

                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="5dp"
                                    android:paddingLeft="5dp"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.4"
                                        android:layout_gravity="center"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:src="@drawable/date"/>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.5">

                                        <LinearLayout
                                            android:gravity="center_vertical"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:textColor="@color/mainTextColor"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="20th October 2017"/>


                                        </LinearLayout>


                                    </LinearLayout>





                                </LinearLayout>








                    </LinearLayout>


                    <LinearLayout

                        android:layout_below="@id/headerimage_layout"
                        android:layout_marginTop="0dp"
                        android:id="@+id/location_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <LinearLayout

                                android:weightSum="1"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp">



                                <LinearLayout
                                    android:background="@drawable/bottom_greyborder"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:weightSum="2"
                                    android:layout_weight="1"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.4"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/foldable_location_image"
                                            android:layout_width="40dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/popup_location"/>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_width="0dp"
                                        android:layout_weight="1.5"
                                        android:layout_height="wrap_content"
                                        >

                                        <LinearLayout
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:gravity="center_vertical"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">



                                            <TextView
                                                android:layout_marginLeft="4dp"
                                                android:id="@+id/foldable_description"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="uncity club house was handed over to all the proud owners of healthy home in security project"/>

                                        </LinearLayout>


                                    </LinearLayout>





                                </LinearLayout>








                            </LinearLayout>



                        </RelativeLayout>


                    </LinearLayout>






                    <!-- dates part -->



                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="0dp"
                        android:visibility="visible"
                        android:id="@+id/news_Desclayout"
                        android:layout_below="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:minHeight="170dp"
                                android:padding="5dp"
                                android:background="@drawable/bottom_greyborder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_marginLeft="75dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="16sp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:id="@+id/foldable_description1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Suncity club house was handed over to all the proud owners of healthy home in security project......"/>


                                </LinearLayout>










                                <!--      <ImageView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:/>-->



                            </LinearLayout>




                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/date_layout"
                android:id="@+id/main_Count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/pollcount_layout"
                        android:layout_below="@+id/location_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_margin="5dp"
                        >
                        <LinearLayout
                            android:id="@+id/count_layout1"
                            android:layout_width="0dp"
                            android:background="@drawable/oval_rectangle"
                            android:layout_weight="1"
                            android:layout_height="100dp">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:textColor="@color/gray"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"

                                        android:text="+6"/>

                                    <TextView
                                        android:textColor="@color/gray"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Friends"/>

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/count_layout2"
                            android:layout_marginLeft="6dp"
                            android:layout_width="0dp"
                            android:background="@drawable/oval_rectangle"
                            android:layout_weight="1"
                            android:layout_height="100dp">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/count_image1"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        />

                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/notgoing"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Not Going"/>

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/count_layout3"
                            android:layout_marginLeft="6dp"
                            android:layout_width="0dp"
                            android:background="@drawable/oval_rectangle"
                            android:layout_weight="1"
                            android:layout_height="100dp">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView

                                        android:id="@+id/count_image2"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        />

                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/going"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Going"/>

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_margin="0dp"
                android:id="@+id/recyclervote"
                android:layout_below="@id/main_Count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.dant.centersnapreyclerview.SnappingRecyclerView

                    android:layout_marginTop="5dp"
                    android:layout_height="152dp"
                    android:visibility="visible"
                    android:id="@+id/pollslist"
                    android:scrollbars="none"
                    android:clickable="true"
                    app:orientation="horizontal"
                    app:anchor="center"
                    android:layout_width="match_parent" />

            </LinearLayout>

            <ImageView
                android:visibility="visible"
                android:layout_below="@id/main_Count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:src="@drawable/close"
                android:id="@+id/closebutton"
                />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout

        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/round_button_background"
        android:layout_margin="5dp" android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_width="25dp">

        <Button
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closedialog"
            android:text="x"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            />



    </LinearLayout>

    <!--<Button android:layout_alignParentRight="true"
        android:shadowColor="#7000"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:id="@+id/closedialog"
        android:text="x"
        android:textColor="@color/gray"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="5dp" android:layout_height="25dp"
        android:layout_width="25dp" android:textSize="12sp"
        android:textStyle="bold"
        />-->
</RelativeLayout>