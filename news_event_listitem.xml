<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:background="@drawable/round_rectangle"
            android:layout_width="300dp"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/event_background_image"
                android:background="@drawable/event"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:weightSum="10"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"

                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout

                    android:layout_height="120dp"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:id="@+id/type_bg"
                    android:background="@drawable/news_bg"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/title_header"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:text="Suncity Club Handover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout

                        android:background="@drawable/roundwhite_rect"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/type"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Polls"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/count"
                            android:textStyle="bold"
                            android:text="20"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left">

                                <TextView
                                    android:id="@+id/voted"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="October"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/parent_time_layout"
                                android:layout_gravity="center_vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right">
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:tint="@color/white"
                                        android:src="@drawable/ic_form_prefered"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:id="@+id/imageView" />


                                    <TextView
                                        android:id="@+id/time"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10:00 AM"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="65dp"
                android:orientation="horizontal"
                android:id="@+id/textView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlearrow_bg" >

                <ImageView
                    android:id="@+id/arrow_click"
                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_navigationitem_selected"

                    />


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:id="@+id/location_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/map"/>
            <TextView
                android:id="@+id/description_row"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="filtered out as junk email or go to your bulk mail folder."/>


        </LinearLayout>



    </LinearLayout>



</LinearLayout>