<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:id="@+id/main"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/scrollView"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/welcome_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp">


                            <test.jinesh.customnavigation.CircleImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/profile_image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/circle_img"
                                android:src="@drawable/profile_pic"
                                />


                            <LinearLayout
                                android:layout_marginLeft="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/profile_image"
                                android:orientation="vertical">
                                <TextView

                                    android:id="@+id/welcome_title"
                                    android:textSize="14sp"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/profile_image"
                                    android:text="Greeting from Amarprakash" />
                                <TextView
                                    android:id="@+id/message"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:textColor="@color/white"
                                    android:text="We are glad in welcoming you The Happy Family League of more than 4500 familes in AMARPRAKASH family.."
                                    android:textSize="12sp" />

                            </LinearLayout>





                        </RelativeLayout>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Balu Mahendrian"/>


                            </LinearLayout>


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                      <!--          <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.4"
                                    android:layout_height="20dp"
                                    android:background="@drawable/line_code"/>-->

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/line_code"/>
                            </LinearLayout>



                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/clientcode_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:textColor="@color/white"
                                        android:text="Client Code :"/>




                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/clientcode"
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:textColor="@color/white"
                                        android:text="APC00035"/>

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:visibility="visible"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/bg_line" />

                    <LinearLayout
                        android:id="@+id/projectlist_bg"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                        <test.jinesh.customnavigation.HorizontialListViewnew
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:visibility="gone"
                            android:id="@+id/hlvSimpleList"
                            >


                        </test.jinesh.customnavigation.HorizontialListViewnew>


             <!--           <android.support.v7.widget.RecyclerView
                            android:layout_height="wrap_content"
                            android:id="@+id/recycler_view"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent" />-->


 <!--                       <android.support.v7.widget.RecyclerView
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:id="@+id/recycler_view"
                            android:scrollbars="horizontal"
                            android:clickable="true"
                            android:layout_width="match_parent" />-->
                <FrameLayout
                    android:id="@+id/framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.dant.centersnapreyclerview.SnappingRecyclerView
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:id="@+id/recycler_view"
                        android:scrollbars="horizontal"
                        android:clickable="true"
                        app:orientation="horizontal"
                        app:anchor="center"
                        android:layout_width="match_parent" />

                    <LinearLayout
                        android:id="@+id/imageView_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                       <ImageView
                           android:background="@color/transparent"
                           android:id="@+id/swipeicon"
                           android:tintMode="src_in"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:tint="@color/white"
                           android:src="@drawable/hand"/>


                    </LinearLayout>



                </FrameLayout>









                    </LinearLayout>

                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/bg_line" />


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
>


                 <!--   <test.jinesh.customnavigation.HorizontalListViewnew
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/news_eventslist"
                        >


                    </test.jinesh.customnavigation.HorizontalListViewnew>

                        -->


                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/news_eventslist"
                            android:visibility="gone"
                            android:clickable="true"

                            />


                       <!-- </test.jinesh.customnavigation.HorizontialListViewnew>-->

                        <android.support.v7.widget.RecyclerView

                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:id="@+id/recycler_view1"
                            android:scrollbars="horizontal"
                            android:clickable="true"
                            android:layout_width="match_parent" />

<!--
                        <test.jinesh.customnavigation.HorizontalListView
                            android:id="@+id/hlvSimpleList1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />-->




                    </LinearLayout>


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

        <LinearLayout

            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@null"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <include layout="@layout/menulayoutback"></include>
            </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:src="@drawable/project"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:visibility="visible"
                android:layout_weight="1"/>

            <LinearLayout
                android:visibility="gone"
                android:background="@drawable/dashboard_select_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp">


            </LinearLayout>






            <ImageView
                android:src="@drawable/reference"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>

            <ImageView
                android:visibility="visible"
                android:src="@drawable/dashboard"
                android:background="@drawable/news_bg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>



            <ImageView
                android:src="@drawable/profile"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>

            <ImageView
                android:src="@drawable/add"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/toolbar_layout" />


</LinearLayout>